{
  "name": "typescript-script-template",
  "version": "1.1.0",
  "description": "An opinionated template for writing scripts using Typescript",
  "main": "dist/index.js",
  "author": "Luke Hansford",
  "license": "MIT",
  "scripts": {
    "build": "rollup --config ./config/rollup.config.js",
    "lint": "yarn eslint src --ext .js,.ts",
    "lint:fix": "yarn lint --fix",
    "start": "yarn build && node dist/index.js",
    "test": "jest --config ./config/jest.config.js",
    "test:watch": "jest --watchAll",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-async-to-generator": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/inquirer": "^7.3.3",
    "@types/jest": "^27.0.1",
    "babel-jest": "^27.0.6",
    "eslint": "^7.32.0",
    "eslint-config-lukehansford-base": "^1.1.0",
    "eslint-plugin-jest-formatting": "^3.0.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rollup": "^2.56.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-preserve-shebangs": "^0.2.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "inquirer": "^8.1.2"
  }
}
